{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper" class="col-md-12 centered">
        <div class="col-md-8 centered">

        <form id="atm" action="{{ path('withdraw') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock"></i> {{ 'ATM' }}</legend>
                        <div class="form-group">
                            <input type="text" id="amount" name="amount" class="col-md-3"/>
                        </div>
                        <br>
                        <button type="submit" id="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in"></i> {{ 'Withdraw' }}
                        </button>
                    </fieldset>
                </form>
         {% if error is defined %}
            <div>{{error}}</div>
        {% endif %} 
        </div>
                
    </div>
{% endblock %}
